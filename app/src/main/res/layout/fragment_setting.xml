<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.SettingFrag">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/id_relativeLayout"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">



                <LinearLayout
                    android:id="@+id/id_cvVideoCamera"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:background="@drawable/ic_bg_main"
                    android:paddingLeft="25dp"
                    android:layout_marginTop="10dp"
                    tools:ignore="DuplicateIds">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/video_cam"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:orientation="vertical">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_black"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/str_VideoCamera"/>

                        <TextView
                            android:id="@+id/id_videoCameraSummary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Back Camera"
                            android:textColor="@color/color_black" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_btnCheckRateUs"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:gravity="center"
                    android:background="@drawable/ic_bg_main"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <ImageView
                        android:id="@+id/rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rate"
                        />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/color_black"
                        android:text="@string/str_RateUs"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_btnShare"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="25dp"
                    android:gravity="center"
                    android:background="@drawable/ic_bg_main"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/share"
                        />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:text="@string/str_ShareApp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</LinearLayout>