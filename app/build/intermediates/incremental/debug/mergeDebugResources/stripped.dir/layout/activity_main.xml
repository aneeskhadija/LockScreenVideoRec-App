<?xml version="1.0" encoding="utf-8"?>

                                                        

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <!--Below fragment is for NavController Navigation-->
        <fragment
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation" />

        <!--Below layout is for normal Navigation-->
        <LinearLayout
            android:id="@+id/lnrLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>


        <com.simform.custombottomnavigation.SSCustomBottomNavigation
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:ss_backgroundBottomColor="@color/bottom_nav_color"
            app:ss_backgroundBottomDrawable="@drawable/bottom_drawable"
            app:ss_circleColor="@color/colorPrimary"
            app:ss_countBackgroundColor="@color/colorPrimary"
            app:ss_countTextColor="@color/color_txt"
            app:ss_countTypeface="fonts/graphik_semibold.ttf"
            app:ss_defaultIconColor="@color/colorPrimary"
            app:ss_iconTextColor="@color/colorPrimary"
            app:ss_iconTextSize="12sp"
            app:ss_iconTextTypeface="fonts/graphik_semibold.ttf"
            app:ss_rippleColor="#2f424242"
            app:ss_selectedIconColor="@color/colorPrimaryDark"
            app:ss_selectedIconTextColor="@color/colorPrimaryDark"
            app:ss_shadowColor="#1f212121"
            app:ss_waveHeight="7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    

           
         